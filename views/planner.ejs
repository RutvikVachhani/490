    <div class="row">
      <div class="column">
        <!--Left Column-->
        <!-- <p>Expected Gradation Date: </p>
            <hr> -->

        <!--Here, a user will select a semester to set as their graduation date.-->

        <!--Here, a user selects the year (Fall to Spring) they wish to plan.-->
        <div class="years">
          <!-- <h1>Choose a Year:</h1> -->
          <label for="year">Choose starting year:</label>
          <select id="sYear">
            <option value="2020">2020</option>
            <option value="2021">2021</option>
            <option value="2022">2022</option>
            <option value="2023">2023</option>
          </select>
          <button id="submitBtn">Submit</button>
        </div>
        <br />
        <p>
          Expected Graduation Date:
          <br />
          <span type="text" id="pYear"></span>
        </p>
        <hr />
        <div class="inProgress">
          <h1>In Progress</h1>
          <div>
            <table>
              <tbody>
                <tr>
                  <th>Dept</th>
                  <th>Course No.</th>
                  <th>Units</th>
                </tr>
                <% data.forEach(entry=> { %>
                <tr id="<%= entry.Department + entry.CourseNumber %>">
                  <td><%= entry.Department %></td>
                  <td><%= entry.CourseNumber %></td>
                  <td><%= entry.Credits %></td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="column">
        <!--Middle Column-->
        <p id="middle-start"></p>
        <!--For the two semesters, the buttons and interactions need to be limited, until the user selects one.-->
        <div class="Classes" style="border: 2px solid black">
          <!--Fall semester-->
          <div class="Fall">
            <h3 id="Fall"></h3>
            <button type="button" id="closeFall" onclick="closeFall()" hidden>
              Finish Editing
            </button>
            <button type="button" id="editFall" onclick="editFall()">
              Edit Fall Semester
            </button>
              <table class="mytable" id="table3">
              <thead>
                <tr class="table3">
                  <th>Dept.</th>
                  <th>Course No.</th>
                </tr>
                </thead>
                  <tbody id="fallTable" class="connectedSortable">
                    <tr class="table3"></tr>
                  <td></td>
                </tr>
              </tbody>
            </table>
          </div>

          <hr />

          <!--Spring semester-->
          <h3></h3>
          <div class="Spring">
            <h3></h3>
            <button
              type="button"
              id="closeSpring"
              onclick="closeSpring()"
              hidden
            >
              Finish Editing
            </button>
            <button type="button" id="editSpring" onclick="editSpring()">
              Edit Spring Semester
            </button>
            <table class="mytable" id="table2">
              <thead>
                <tr class="table2">
                  <th>Dept.</th>
                  <th>Course No.</th>
                </tr>
                </thead>
                  <tbody id="springTable" class="connectedSortable">
                    <tr class="table2"></tr>
                    <td></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
        <button class="prev-btn">
          <i class="fas fa-chevron-left"></i>
        </button>
        <button class="next-btn">
          <i class="fas fa-chevron-right"></i>
        </button>
      </div>

      <div class="column">
        <!--Right Column-->

        <h2>Important!</h2>
        <p>
          In order to minimize your stay at CSUN, you must take the classes
          indicated in green <strong>this</strong> semester to avoid the the
          possibility of adding an additional semester to your degree plan.
        </p>
        <p>Click on the "+" to drag and add classes.</p>
        <p>Click on the "-" to delete a class from the semetser.</p>

        <div class="recomended">
          <h3
            title="The classes listed here are HIGHLY recommended to be taken to stay on track for the semester."
          >
            RECOMMENDED
          </h3>
          <div>
            <table class="mytable" id="table1">
              <thead>
                <tr class="table1">
                  <th>Dept.</th>
                  <th>Course No.</th>
                </tr>
              </thead>
              <tbody id="recommendedList" class="connectedSortable">
                <% data3.forEach(entry=> { %>
                <tr class="table1" title="Recomended Class">
                  <td><%= entry.Department %></td>
                  <td><%= entry.CourseNumber %></td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
          <!--Classes highly recomended to students.-->
        </div>

        <div class="required">
          <h3>REQUIRED</h3>
          <div>
            <table class="mytable" id="table3">
              <thead>
                <tr class="table3">
                  <th>Dept.</th>
                  <th>Course No.</th>
                </tr>
              </thead>
              <tbody id="requiredList" class="connectedSortable">
                <% data2.forEach(entry=> { %>
                <tr
                  id="<%= entry.Department + entry.CourseNumber %>"
                  title="Required Class"
                >
                  <td><%= entry.Department %></td>
                  <td><%= entry.CourseNumber %></td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
          <!--Classes the student needs to take.-->
        </div>
      </div>
    </div>
