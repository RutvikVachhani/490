<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link href="css/plannerStyle.css" rel="stylesheet" type="text/css" />
    <!-- <script>
        function getYear(){
            var year = document.getElementById("year");
            var displayYear = year.options[year.selectedIndex].text;
            document.getElementById('pYear').value=displayYear;
        }
    </script> -->
    <title>Planner</title>
    <header>
      <div class="headerMargin">
        <h1>CSUN</h1>
        <div class="left">
          <a href="/planner">Home</a>
          <a href="/profile">Profile</a>
          <a href="/logout">Logout</a>
        </div>
      </div>
    </header>
  </head>

  <body>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>

    <div class="row">
      <div class="column">
        <!--Left Column-->
        <!-- <p>Expected Gradation Date: </p>
            <hr> -->

        <!--Here, a user will select a semester to set as their graduation date.-->

        <!--Here, a user selects the year (Fall to Spring) they wish to plan.-->
        <div class="years">
          <!-- <h1>Choose a Year:</h1> -->
          <label for="year">Choose starting year:</label>
          <select id="sYear">
            <option value="2024">2020</option>
            <option value="2025">2021</option>
            <option value="2026">2022</option>
            <option value="2027">2023</option>
          </select>
          <button id="submitBtn">Submit</button>
        </div>
        <br />
        <p>
          Expected Graduation Date:
          <br />
          <span type="text" id="pYear"></span>
        </p>
        <hr />
        <div class="inProgress">
          <h1>In Progress</h1>
          <div>
            <table>
              <tr>
                <th>Dept</th>
                <th>Course No.</th>
                <th>Units</th>
              </tr>
              <% data.forEach(entry=> { %>
              <tr id="<%= entry.Department + entry.CourseNumber %>">
                <td><%= entry.Department %></td>
                <td><%= entry.CourseNumber %></td>
                <td><%= entry.Credits %></td>
              </tr>
              <% }) %>
            </table>
          </div>
        </div>
      </div>

      <div class="column">
        <!--Middle Column-->
        <p id="middle-start"></p>
        <!--For the two semesters, the buttons and interactions need to be limited, until the user selects one.-->

        <!--Fall semester-->
        <div class="Fall">
          <h3 id="Fall"></h3>
          <button type="button" id="closeFall" onclick="closeFall()" hidden>
            Finish Editing
          </button>
          <button type="button" id="editFall" onclick="editFall()">
            Edit Fall Semester
          </button>
          <table>
            <tr>
              <th>Dept.</th>
              <th>Course No.</th>
            </tr>
            <tr id="placeholderFall">
              <th>Drag course here:</th>
            </tr>
          </table>
        </div>

        <hr />

        <!--Spring semester-->
        <h3></h3>
        <div class="Spring">
          <h3></h3>
          <button type="button" id="closeSpring" onclick="closeSpring()" hidden>
            Finish Editing
          </button>
          <button type="button" id="editSpring" onclick="editSpring()">
            Edit Spring Semester
          </button>
          <table>
            <tr>
              <th>Dept.</th>
              <th>Course No.</th>
            </tr>
            <tr id="placeholderSpring">
              <th>Drag course here:</th>
            </tr>
          </table>
        </div>
      </div>

      <div class="column">
        <!--Right Column-->

        <h2>Important!</h2>
        <p>
          In order to minimize your stay at CSUN, you must take the classes
          indicated in green <strong>this</strong> semester to avoid the the
          possibility of adding an additional semester to your degree plan.
        </p>
        <p>Click on the "+" to drag and add classes.</p>
        <p>Click on the "-" to delete a class from the semetser.</p>

        <div class="recomended">
          <h3
            title="The classes listed here are HIGHLY recommended to be taken to stay on track for the semester."
          >
            RECOMMENDED
          </h3>
          <div>
            <table>
              <tr>
                <th>Dept.</th>
                <th>Course No.</th>
              </tr>
              <% data3.forEach(entry=> { %>
              <tr
                id="<%= entry.Department + entry.CourseNumber %>"
                title="Recomended Class"
              >
                <td><%= entry.Department %></td>
                <td><%= entry.CourseNumber %></td>
              </tr>
              <% }) %>
            </table>
          </div>
          <!--Classes highly recomended to students.-->
        </div>

        <div class="required">
          <h3>REQUIRED</h3>
          <div>
            <table>
              <tr>
                <th>Dept.</th>
                <th>Course No.</th>
              </tr>
              <% data2.forEach(entry=> { %>
              <tr
                id="<%= entry.Department + entry.CourseNumber %>"
                title="Required Class"
              >
                <td><%= entry.Department %></td>
                <td><%= entry.CourseNumber %></td>
              </tr>
              <% }) %>
            </table>
          </div>
          <!--Classes the student needs to take.-->
        </div>
      </div>
    </div>
    <script src="css/script.js"></script>
  </body>
</html>
